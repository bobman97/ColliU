<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.colliu.colliu.controllers.LoginController" >
   <children>
      <fx:include fx:id="titleBar" source="TitleBar.fxml" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      <Pane layoutX="14.0" layoutY="115.0" prefHeight="211.0" prefWidth="343.0">
         <children>
            <Button fx:id="login" layoutX="238.0" layoutY="39.0" mnemonicParsing="false" onAction="#onLogInClick" prefHeight="61.0" prefWidth="63.0" text="Log In">
               <font>
                  <Font size="11.0" />
               </font></Button>
            <Button fx:id="forgotpassword" layoutX="118.0" layoutY="138.0" lineSpacing="10.0" mnemonicParsing="false" onAction="#onForgotPasswordClick" prefHeight="24.0" prefWidth="104.0" text="Forgot Password?">
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
            <Button fx:id="btnNewStudent" layoutX="67.0" layoutY="173.0" mnemonicParsing="false" onAction="#registerStudent" prefHeight="24.0" prefWidth="80.0" text="New Student">
               <opaqueInsets>
                  <Insets top="5.0" />
               </opaqueInsets>
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
            <TextField fx:id="guEmail" layoutX="38.0" layoutY="39.0" prefHeight="26.0" prefWidth="187.0" promptText="GU Email">
               <opaqueInsets>
                  <Insets right="8.0" top="8.0" />
               </opaqueInsets>
               <font>
                  <Font size="11.0" />
               </font>
            </TextField>
            <Group />
            <Label id="warningLabel" fx:id="warningLabel" layoutX="38.0" layoutY="108.0" prefHeight="17.0" prefWidth="264.0" textFill="#ee0202">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <PasswordField fx:id="password" layoutX="38.0" layoutY="74.0" prefHeight="26.0" prefWidth="187.0" promptText="Password">
               <font>
                  <Font size="11.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnNewTeacher" layoutX="178.0" layoutY="173.0" mnemonicParsing="false" onAction="#registerStaff" prefHeight="24.0" prefWidth="80.0" text="New Teacher">
               <opaqueInsets>
                  <Insets top="5.0" />
               </opaqueInsets>
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <ImageView fitHeight="107.0" fitWidth="200.0" layoutX="85.0" layoutY="21.0">
         <image>
            <Image url="@../images/ColliU_logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
