<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.colliu.colliu.fxml.EventCreation">
   <children>
      <Pane layoutX="145.0" layoutY="172.0" prefHeight="539.0" prefWidth="683.0">
         <children>
            <Button fx:id="createEvent" layoutX="260.0" layoutY="404.0" mnemonicParsing="false" onAction="#onCreateEventClicked" prefHeight="48.0" prefWidth="181.0" text="Create event">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TextField fx:id="eventTitle" layoutX="240.0" layoutY="33.0" prefHeight="37.0" prefWidth="339.0" promptText="Type event title freely" />
            <Label layoutX="134.0" layoutY="41.0" text="Event Title" />
            <Label layoutX="133.0" layoutY="171.0" text="Date and Time" />
            <Label layoutX="134.0" layoutY="234.0" text="Category" />
            <ChoiceBox fx:id="categoryChoiceBox" layoutX="243.0" layoutY="227.0" prefHeight="32.0" prefWidth="338.0" />
