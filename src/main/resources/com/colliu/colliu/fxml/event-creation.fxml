            <TextField fx:id="date" layoutX="242.0" layoutY="160.0" prefHeight="37.0" prefWidth="152.0" promptText="YYYY-MM-DD" />
            <TextField fx:id="time" layoutX="407.0" layoutY="160.0" prefHeight="37.0" prefWidth="170.0" promptText="hh:mm (e.g. 01:23)" />
